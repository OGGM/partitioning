import geopandas as gpd
import os
from glob import glob

dir ='/home/juliaeis/Dropbox/results_global_partitiong/altitude_filter'

for path in glob(dir + "/RGI50-02/"):
    file = os.path.join(path, [name for name in os.listdir(path) if
                               name.endswith('.shp')][0])
    print(file)

    region = gpd.read_file(file)
    region['new_area']=region.geometry.area
    print(region['Area'].head(),region['new_area'].head())
    #region.to_file(file)